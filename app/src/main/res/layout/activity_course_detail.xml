<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_course_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.feng.opencourse.CourseDetailActivity"
    android:weightSum="1">

    <cn.jzvd.JZVideoPlayerStandard
        android:id="@+id/vp_face"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <android.support.design.widget.TabLayout
        app:tabGravity="fill"
        android:id="@+id/tl_attr"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        app:tabIndicatorColor="#66ff33"
        app:tabIndicatorHeight="2dp"
        app:tabTextColor="#000000"
        app:tabSelectedTextColor="#CC33FF"
        app:tabMode="fixed">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_attr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>


</LinearLayout>
